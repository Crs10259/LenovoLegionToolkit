<wpfui:UiWindow
    x:Class="LenovoLegionToolkit.WPF.Windows.Utils.ActionDetailsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:resources="clr-namespace:LenovoLegionToolkit.WPF.Resources"
    Title="操作详情"
    Height="600"
    Width="800"
    WindowStartupLocation="CenterOwner"
    ResizeMode="CanResize"
    Background="{DynamicResource ApplicationBackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" Margin="20,20,20,0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- 操作标题 -->
                <TextBlock
                    x:Name="_titleTextBlock"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                    Margin="0,0,0,8"
                    TextWrapping="Wrap" />

                <!-- 操作描述 -->
                <TextBlock
                    x:Name="_descriptionTextBlock"
                    FontSize="14"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Margin="0,0,0,20"
                    TextWrapping="Wrap" />

                <!-- 技术实现细节 -->
                <wpfui:CardControl Margin="0,0,0,16">
                    <wpfui:CardControl.Header>
                        <TextBlock
                            FontSize="16"
                            FontWeight="Medium"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Text="技术实现细节" />
                    </wpfui:CardControl.Header>
                    <StackPanel Margin="0,12,0,0">
                        <!-- 实现类型 -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                FontWeight="Medium"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                Text="实现类型：" />
                            <TextBlock
                                x:Name="_implementationTypeTextBlock"
                                Grid.Column="1"
                                Margin="8,0,0,0"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                TextWrapping="Wrap" />
                        </Grid>

                        <!-- 详细信息 -->
                        <Border
                            x:Name="_detailsBorder"
                            Padding="12"
                            Background="{DynamicResource ControlFillColorDefaultBrush}"
                            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="4">
                            <ScrollViewer
                                MaxHeight="300"
                                VerticalScrollBarVisibility="Auto">
                                <StackPanel x:Name="_detailsStackPanel" />
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
                </wpfui:CardControl>
            </StackPanel>
        </ScrollViewer>

        <!-- 关闭按钮 -->
        <Grid Grid.Row="1" Margin="20" HorizontalAlignment="Right">
            <wpfui:Button
                Content="关闭"
                Appearance="Primary"
                Click="CloseButton_Click"
                MinWidth="100" />
        </Grid>
    </Grid>
</wpfui:UiWindow>



<wpfui:UiWindow
    x:Class="LenovoLegionToolkit.WPF.Windows.Utils.MenuStyleSettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:resources="clr-namespace:LenovoLegionToolkit.WPF.Resources"
    Title="{x:Static resources:Resource.SystemBeautification_MenuStyleSettings_Title}"
    Height="500"
    Width="600"
    WindowStartupLocation="CenterOwner"
    Background="{DynamicResource ApplicationBackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" Margin="20,20,20,0" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <wpfui:CardControl Margin="0,0,0,16">
                    <wpfui:CardControl.Header>
                        <TextBlock
                            FontSize="16"
                            FontWeight="Medium"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Text="{x:Static resources:Resource.SystemBeautification_MenuStyleSettings_Theme_Title}" />
                    </wpfui:CardControl.Header>
                    <StackPanel Margin="0,12,0,0">
                        <RadioButton
                            x:Name="_themeAutoRadio"
                            GroupName="ThemeSelection"
                            Content="{x:Static resources:Resource.SystemBeautification_MenuStyleSettings_Theme_Auto}"
                            Margin="0,0,0,8"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                        <RadioButton
                            x:Name="_themeLightRadio"
                            GroupName="ThemeSelection"
                            Content="{x:Static resources:Resource.SystemBeautification_MenuStyleSettings_Theme_Light}"
                            Margin="0,0,0,8"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                        <RadioButton
                            x:Name="_themeDarkRadio"
                            GroupName="ThemeSelection"
                            Content="{x:Static resources:Resource.SystemBeautification_MenuStyleSettings_Theme_Dark}"
                            Margin="0,0,0,8"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                        <RadioButton
                            x:Name="_themeClassicRadio"
                            GroupName="ThemeSelection"
                            Content="{x:Static resources:Resource.SystemBeautification_MenuStyleSettings_Theme_Classic}"
                            Margin="0,0,0,8"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                        <RadioButton
                            x:Name="_themeModernRadio"
                            GroupName="ThemeSelection"
                            Content="{x:Static resources:Resource.SystemBeautification_MenuStyleSettings_Theme_Modern}"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                    </StackPanel>
                </wpfui:CardControl>

                <wpfui:CardControl Margin="0,0,0,16">
                    <wpfui:CardControl.Header>
                        <TextBlock
                            FontSize="16"
                            FontWeight="Medium"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Text="{x:Static resources:Resource.SystemBeautification_MenuStyleSettings_Transparency_Title}" />
                    </wpfui:CardControl.Header>
                    <StackPanel Margin="0,12,0,0">
                        <wpfui:ToggleSwitch
                            x:Name="_transparencyToggle"
                            Content="{x:Static resources:Resource.SystemBeautification_MenuStyleSettings_Transparency_Enable}" />
                    </StackPanel>
                </wpfui:CardControl>

                <wpfui:CardControl>
                    <wpfui:CardControl.Header>
                        <TextBlock
                            FontSize="16"
                            FontWeight="Medium"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Text="{x:Static resources:Resource.SystemBeautification_MenuStyleSettings_Appearance_Title}" />
                    </wpfui:CardControl.Header>
                    <StackPanel Margin="0,12,0,0">
                        <wpfui:ToggleSwitch
                            x:Name="_roundedCornersToggle"
                            Content="{x:Static resources:Resource.SystemBeautification_MenuStyleSettings_Appearance_RoundedCorners}"
                            Margin="0,0,0,8" />
                        <wpfui:ToggleSwitch
                            x:Name="_shadowsToggle"
                            Content="{x:Static resources:Resource.SystemBeautification_MenuStyleSettings_Appearance_Shadows}" />
                    </StackPanel>
                </wpfui:CardControl>
            </StackPanel>
        </ScrollViewer>

        <StackPanel
            Grid.Row="1"
            Margin="20"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <wpfui:Button
                x:Name="_applyButton"
                MinWidth="120"
                Margin="0,0,8,0"
                Click="ApplyButton_Click"
                Content="{x:Static resources:Resource.SystemBeautification_MenuStyleSettings_Apply}" />
            <wpfui:Button
                x:Name="_closeButton"
                MinWidth="120"
                Click="CloseButton_Click"
                Content="{x:Static resources:Resource.Close}" />
        </StackPanel>
    </Grid>
</wpfui:UiWindow>


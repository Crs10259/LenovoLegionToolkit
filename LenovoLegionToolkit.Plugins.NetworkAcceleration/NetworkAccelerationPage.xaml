<wpfui:UiPage
    x:Class="LenovoLegionToolkit.Plugins.NetworkAcceleration.NetworkAccelerationPage"
    x:Name="PageRoot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:plugin="clr-namespace:LenovoLegionToolkit.Plugins.NetworkAcceleration"
    xmlns:controls="clr-namespace:LenovoLegionToolkit.Plugins.NetworkAcceleration.Controls"
    xmlns:conv="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
    UseLayoutRounding="True"
    SnapsToDevicePixels="True"
    TextOptions.TextFormattingMode="Display"
    TextOptions.TextRenderingMode="Auto"
    FlowDirection="LeftToRight"
    Scrollable="False"
    Loaded="Page_Loaded"
    Unloaded="Page_Unloaded"
    MouseWheel="Page_MouseWheel"
    PreviewMouseWheel="Page_PreviewMouseWheel">
    
    <wpfui:UiPage.Resources>
        <conv:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </wpfui:UiPage.Resources>

    <Grid Margin="0,0,16,0" MouseWheel="Grid_MouseWheel" ClipToBounds="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Content -->
        <ScrollViewer 
            x:Name="_contentScrollViewer"
            Grid.Row="0" 
            Grid.RowSpan="2" 
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Disabled"
            PanningMode="VerticalOnly"
            PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
            <StackPanel Margin="0,0,0,0" PreviewMouseWheel="StackPanel_PreviewMouseWheel">
                
                <!-- Header with Description -->
                <StackPanel Margin="0,16,0,24">
                    <TextBlock
                        AutomationProperties.Name="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Text}"
                        Focusable="True"
                        FontSize="24"
                        FontWeight="Medium"
                        Text="{x:Static plugin:Resource.NetworkAcceleration_PageTitle}" />
                    <TextBlock
                        Margin="0,8,0,0"
                        FontSize="14"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        TextWrapping="Wrap"
                        Text="{x:Static plugin:Resource.NetworkAcceleration_PageDescription}"
                        LineHeight="20" />
                </StackPanel>
                
                <!-- Traffic Stats - Enhanced Design (only visible when service is running) -->
                <Border
                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="20"
                    Margin="0,0,0,16"
                    Visibility="{Binding IsServiceEnabled, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel>
                        <!-- Header with Title -->
                        <TextBlock
                            FontSize="18"
                            FontWeight="Medium"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Margin="0,0,0,20"
                            Text="{x:Static plugin:Resource.NetworkAcceleration_AcceleratedTraffic}" />
                        
                        <!-- Total Traffic - Prominent Display -->
                        <Border
                            Background="{DynamicResource ControlFillColorSecondaryBrush}"
                            CornerRadius="8"
                            Padding="16,12"
                            Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock
                                    FontSize="12"
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                    Margin="0,0,0,6"
                                    Text="{x:Static plugin:Resource.NetworkAcceleration_TotalTraffic}" />
                                <TextBlock
                                    FontSize="32"
                                    Foreground="{DynamicResource SystemAccentColorBrush}"
                                    Text="{Binding TotalTraffic, Mode=OneWay}" />
                            </StackPanel>
                        </Border>
                        
                        <!-- Download/Upload Stats - Side by Side -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="12" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            
                            <!-- Download Section (Red color) -->
                            <Border
                                Grid.Column="0"
                                Background="{DynamicResource ControlFillColorSecondaryBrush}"
                                CornerRadius="8"
                                Padding="16,14">
                                <StackPanel>
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                        Margin="0,0,0,8"
                                        Text="{x:Static plugin:Resource.NetworkAcceleration_Downloaded}" />
                                    <TextBlock
                                        FontSize="26"
                                        Foreground="#E74C3C"
                                        Margin="0,0,0,6"
                                        Text="{Binding DownloadedTraffic, Mode=OneWay}" />
                                    <TextBlock
                                        FontSize="13"
                                        FontWeight="Medium"
                                        Foreground="#E74C3C"
                                        Text="{Binding DownloadSpeed, Mode=OneWay}" />
                                </StackPanel>
                            </Border>
                            
                            <!-- Upload Section (Blue color) -->
                            <Border
                                Grid.Column="2"
                                Background="{DynamicResource ControlFillColorSecondaryBrush}"
                                CornerRadius="8"
                                Padding="16,14">
                                <StackPanel>
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                        Margin="0,0,0,8"
                                        Text="{x:Static plugin:Resource.NetworkAcceleration_Uploaded}" />
                                    <TextBlock
                                        FontSize="26"
                                        Foreground="#1E90FF"
                                        Margin="0,0,0,6"
                                        Text="{Binding UploadedTraffic, Mode=OneWay}" />
                                    <TextBlock
                                        FontSize="13"
                                        FontWeight="Medium"
                                        Foreground="#1E90FF"
                                        Text="{Binding UploadSpeed, Mode=OneWay}" />
                                </StackPanel>
                            </Border>
                        </Grid>
                        
                        <!-- Traffic Chart - Enhanced -->
                        <controls:TrafficChartControl
                            x:Name="_trafficChartControl"
                            Height="170"
                            Visibility="{Binding IsServiceEnabled, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    </StackPanel>
                </Border>
                
                <!-- Service Status -->
                <Border
                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,0,0,12">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock
                                    FontSize="16"
                                    FontWeight="Medium"
                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                    Margin="0,0,0,4">
                                    <Run Text="{x:Static plugin:Resource.NetworkAcceleration_ServiceStatus}" /><Run Text=": " />
                                    <Run Text="{Binding ServiceStatus, Mode=OneWay}" Foreground="{DynamicResource SystemAccentColorBrush}" />
                                </TextBlock>
                                <TextBlock
                                    FontSize="14"
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                    Text="{Binding ServiceStatusDescription, Mode=OneWay}"
                                    Margin="0,4,0,0" />
                            </StackPanel>
                            <wpfui:ToggleSwitch
                                Grid.Column="1"
                                x:Name="_serviceToggleSwitch"
                                IsChecked="{Binding IsServiceEnabled, Mode=TwoWay}"
                                Click="ServiceToggleSwitch_Click"
                                VerticalAlignment="Center" />
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- DNS Optimization -->
                <Border
                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock
                            FontSize="16"
                            FontWeight="Medium"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Text="{x:Static plugin:Resource.NetworkAcceleration_DnsOptimization}"
                            Margin="0,0,0,4" />
                        <TextBlock
                            FontSize="13"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="{x:Static plugin:Resource.NetworkAcceleration_DnsOptimizationDescription}"
                            Margin="0,0,0,12"
                            TextWrapping="Wrap" />
                        <wpfui:ToggleSwitch
                            x:Name="_dnsOptimizationToggle"
                            IsChecked="{Binding IsDnsOptimizationEnabled, Mode=TwoWay}"
                            Margin="0,0,0,8" />
                        <TextBlock
                            FontSize="13"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            TextWrapping="Wrap"
                            Text="{x:Static plugin:Resource.NetworkAcceleration_DnsOptimizationEnabledDescription}" />
                    </StackPanel>
                </Border>

                <!-- Request Interception -->
                <Border
                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock
                            FontSize="16"
                            FontWeight="Medium"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Text="{x:Static plugin:Resource.NetworkAcceleration_RequestInterception}"
                            Margin="0,0,0,4" />
                        <TextBlock
                            FontSize="13"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="{x:Static plugin:Resource.NetworkAcceleration_RequestInterceptionDescription}"
                            Margin="0,0,0,12"
                            TextWrapping="Wrap" />
                        <wpfui:ToggleSwitch
                            x:Name="_requestInterceptionToggle"
                            IsChecked="{Binding IsRequestInterceptionEnabled, Mode=TwoWay}"
                            Margin="0,0,0,8" />
                        <TextBlock
                            FontSize="13"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            TextWrapping="Wrap"
                            Text="{x:Static plugin:Resource.NetworkAcceleration_RequestInterceptionEnabledDescription}" />
                    </StackPanel>
                </Border>

                <!-- GitHub Acceleration -->
                <Border
                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock
                            FontSize="16"
                            FontWeight="Medium"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Text="{x:Static plugin:Resource.NetworkAcceleration_GithubAcceleration}"
                            Margin="0,0,0,4" />
                        <TextBlock
                            FontSize="13"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="{x:Static plugin:Resource.NetworkAcceleration_GithubAccelerationDescription}"
                            Margin="0,0,0,12"
                            TextWrapping="Wrap" />
                        <wpfui:ToggleSwitch
                            x:Name="_githubAccelerationToggle"
                            IsChecked="{Binding IsGithubAccelerationEnabled, Mode=TwoWay}"
                            Margin="0,0,0,8" />
                        <TextBlock
                            FontSize="13"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            TextWrapping="Wrap"
                            Text="{x:Static plugin:Resource.NetworkAcceleration_GithubAccelerationEnabledDescription}" />
                    </StackPanel>
                </Border>

                <!-- Proxy Settings -->
                <Border
                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock
                            FontSize="16"
                            FontWeight="Medium"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Text="{x:Static plugin:Resource.NetworkAcceleration_ProxySettings}"
                            Margin="0,0,0,4" />
                        <TextBlock
                            FontSize="13"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="{x:Static plugin:Resource.NetworkAcceleration_ProxySettingsDescription}"
                            Margin="0,0,0,12"
                            TextWrapping="Wrap" />
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                FontSize="13"
                                Text="{x:Static plugin:Resource.NetworkAcceleration_ProxyAddress}"
                                VerticalAlignment="Center"
                                Margin="0,0,12,0" />
                            <wpfui:TextBox
                                Grid.Column="1"
                                x:Name="_proxyAddressTextBox"
                                PlaceholderText="{x:Static plugin:Resource.NetworkAcceleration_ProxyAddressPlaceholder}"
                                Text="{Binding ProxyAddress, Mode=TwoWay}" />
                        </Grid>
                        <TextBlock
                            FontSize="13"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            TextWrapping="Wrap"
                            Text="{x:Static plugin:Resource.NetworkAcceleration_ProxyAddressDescription}" />
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>

</wpfui:UiPage>






